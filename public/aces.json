{
  "$schema": "../schemas/aces.schema.json",

  "custom": {
    "conditions": [{
      "id": "is-large-number",
      "scriptName": "IsLargeNumber",
      "highlight": true,
      "params": [{
        "id": "number",
        "type": "number"
      }]
    }],
    "expressions": [{
      "id": "double",
      "expressionName": "Double",
      "highlight": true,
      "returnType": "number",
      "params": [{
        "id": "number",
        "type": "number"
      }]
    }]
  },

  "log-events": {
    "actions": [
      {
        "id": "log-event",
        "scriptName": "LogEvent",
        "highlight": true,
        "params": [{
          "id": "type",
          "type": "string"
        }]
      },
      {
        "id": "log-event-payload",
        "scriptName": "LogEvent",
        "params": [
          {
            "id": "type",
            "type": "string"
          },
          {
            "id": "payload",
            "type": "object",
            "allowedPluginIds": ["Json"]
          },
          {
            "id": "empty",
            "type": "boolean",
            "defaultValue": false
          }
        ]
      }
    ]
  }
}
