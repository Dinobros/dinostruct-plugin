      {
        "id": "user-logout-trigger",
        "scriptName": "TriggerOnUserLogout",
        "isTrigger": true
      },

      {
        "id": "user-any-property-set-trigger",
        "scriptName": "TriggerOnUserPropertySet",
        "isTrigger": true
      },
      {
        "id": "user-specific-property-set-trigger",
        "scriptName": "TriggerOnUserPropertySet",
        "params": [{
          "id": "property",
          "type": "string"
