    "expressions": [
      {
        "id": "user-id",
        "expressionName": "UserId",
        "returnType": "string"
      },
      {
        "id": "user-email_address",
        "expressionName": "EmailAddress",
        "returnType": "string"
      },
      {
        "id": "user-username",
        "expressionName": "Username",
        "returnType": "string",
        "highlight": true
      },

      {
        "id": "user-property-get",
        "expressionName": "GetUserProperty",
